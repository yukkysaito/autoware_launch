<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="simulation"/>
  <arg name="scenario_simulation"/>
  <arg name="vehicle_model"/>
  <arg name="vehicle_id"/>
  <arg name="initial_engage_state" default="true"/>

  <arg name="vehicle_model_pkg" default="$(find-pkg-share $(var vehicle_model)_description)"/>


  <!-- simulation mode -->
  <group if="$(var simulation)">
    <group unless="$(var scenario_simulation)">
      <arg name="simulator_model" default="$(var vehicle_model_pkg)/config/simulator_model.param.yaml" />
      <include file="$(find-pkg-share simple_planning_simulator)/launch/simple_planning_simulator.launch.xml">
        <arg name="simulator_model" value="$(var simulator_model)"/>
        <arg name="initial_engage_state" value="$(var initial_engage_state)"/>
      </include>
    </group>
  </group>

  <!-- real mode -->
  <group unless="$(var simulation)">
    <group if="$(eval &quot;'$(var vehicle_model)'=='ymc_golfcart_m0'&quot;)">
      <include file="$(find-pkg-share g30esli_interface)/launch/g30esli_interface.launch.xml">
        <arg name="g30esli_interface_param_file" value="$(find-pkg-share individual_params)/config/$(var vehicle_id)/aip_x1/g30esli_interface.param.yaml" />
        <arg name="initial_engage_state" value="$(var initial_engage_state)"/>
        <arg name="use_disengage_override" value="false" />
        <arg name="use_vehicle_key_override" value="false" />
        <arg name="use_accel_pedal_override" value="false" />
        <arg name="use_brake_pedal_override" value="false" />
        <arg name="use_steer_torque_override" value="false" />
        <arg name="use_support_low_speed_engage" value="true" />
      </include>
    </group>
    <group unless="$(eval &quot;'$(var vehicle_model)'=='ymc_golfcart_m0'&quot;)">
      <include file="$(find-pkg-share g30esli_interface)/launch/g30esli_interface.launch.xml">
        <arg name="g30esli_interface_param_file" value="$(find-pkg-share individual_params)/config/$(var vehicle_id)/aip_x1/g30esli_interface.param.yaml" />
        <arg name="initial_engage_state" value="$(var initial_engage_state)"/>
        <arg name="use_disengage_override" value="true" />
        <arg name="use_vehicle_key_override" value="true" />
        <arg name="use_accel_pedal_override" value="true" />
        <arg name="use_brake_pedal_override" value="true" />
        <arg name="use_steer_torque_override" value="false" />
        <arg name="use_support_low_speed_engage" value="true" />
      </include>
    </group>
    <include file="$(find-pkg-share g30esli_interface_awiv_adapter)/launch/g30esli_interface_awiv_adapter.launch.xml">
      <arg name="g30esli_interface_awiv_adapter_param_file" value="$(find-pkg-share individual_params)/config/$(var vehicle_id)/aip_x1/g30esli_interface_awiv_adapter.param.yaml" />
    </include>
  </group>
</launch>
